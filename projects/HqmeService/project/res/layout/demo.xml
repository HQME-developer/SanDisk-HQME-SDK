<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="1dp">

    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/test_ctrl">

        <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">

            <Button android:id="@+id/start_cm_btn" android:text="Connect" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Spinner android:id="@+id/work_order_list" android:prompt="@string/sample_work_order_spinner_title" android:layout_toRightOf="@id/start_cm_btn" android:drawSelectorOnTop="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Button android:id="@+id/pub_btn" android:text="Publish" android:layout_toRightOf="@id/work_order_list" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <Button android:id="@+id/pub_nudge_btn" android:text="Nudge" android:layout_toRightOf="@id/pub_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" />

        </RelativeLayout>

        <FrameLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="294px" android:padding="5dp">

            <ScrollView android:id="@+id/scrollview" android:layout_width="wrap_content" android:layout_height="fill_parent">
                <com.sandisk.cm.LogTextBox android:id="@+id/app_info_text" android:background="@drawable/box" android:layout_height="0dip" android:layout_width="wrap_content"
                    android:layout_weight="1" android:textStyle="bold" android:layout_marginLeft="0px" android:layout_marginBottom="15px" android:layout_gravity="left" />

            </ScrollView>

        </FrameLayout>

        <VideoView android:id="@+id/videoView" android:layout_width="800px" android:layout_height="300px" />

    </LinearLayout>

</FrameLayout>
